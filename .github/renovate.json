{
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":timezone(Etc/UTC)",
        ":preserveSemverRanges"
    ],
    "labels": [
        "dependencies"
    ],
    "internalChecksFilter": "strict",
    "rebaseWhen": "conflicted",
    "packageRules": [
        {
            "description": "Add the ci and github-actions GitHub label to GitHub Action bump PRs",
            "matchManagers": [
                "github-actions"
            ],
            "labels": [
                "ci-dependencies"
            ]
        }
    ],
    "pip_requirements": {
        "managerFilePatterns": [
            "/requirements(-[a-z]+)?\\.txt$/"
        ]
    }
}
